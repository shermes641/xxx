# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                             controllers.Application.index

#Login
GET         /login                                        controllers.DistributorUsersController.login
POST        /authenticate                                 controllers.DistributorUsersController.authenticate
GET         /logout                                       controllers.DistributorUsersController.logout

#Sign up
GET         /signup                                       controllers.DistributorUsersController.signup
POST        /distributor_users                            controllers.DistributorUsersController.create

#Distributor
#GET		/v1/distributors/:id 	controllers.Distributor.show(id: Long)

#Properties
#GET		/v1/distributors/:id/properties
#GET		/v1/properties/:id

# Waterfalls
GET         /v1/properties/:property_id/waterfalls        controllers.WaterfallsController.list(property_id: Long)
GET         /v1/waterfalls/:id                            controllers.WaterfallsController.show(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                 controllers.Assets.at(path="/public", file)

